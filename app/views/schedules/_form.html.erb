
<div class="form-row">
  <div class='form-group col-md-6'>
    <%= f.label t('schedules.edit.form.title.title'), for: :title  %>
    <%= f.text_field :title,
                    class: 'form-control',
                    placeholder: t('schedules.edit.form.title.placeholder'),
                    required: true
    %>
  </div>

  <div class='form-group col-md-6'>
    <%= f.label t('schedules.edit.form.start_date.title'), for: :start_date  %>
    <%= f.date_field :start_date, type: :date, class: 'form-control' %>
    <small id="start_date" class="form-text text-muted">
      <%= t('schedules.edit.form.start_date.text_muted') %>
    </small>
  </div>
</div>

<div class="form-row">
  <div class='form-group col-md-12'>
    <%= f.label t('schedules.edit.form.description.title'), for: :description %>
    <%= f.text_area :description,
                  class: 'form-control',
                  placeholder: t('schedules.edit.form.description.placeholder'),
                  required: true
    %>
  </div>
  
</div>
